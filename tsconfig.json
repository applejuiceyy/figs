{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,

		"types": [
            "./src/lib/typings/docs"
		],
	},

	"exclude": [
			"./plugins/**/*.ts",
			"./plugins/**/*.js"
	]
}
